# Edit this file, save it, "source" it, then "make init"

# Name of the operator that will control your workload deployment
export MY_OPERATOR_NAME=my-operator

# Version of the operator container
export MY_OPERATOR_VERSION=1.0.0

# Your docker ID (get one for free at https://hub.docker.com/)
export MY_DOCKER_HUB_ID=

# A name for the workload container
export MY_CONTAINER_NAME=

# Complete reference to your workload container (dockerID/repo:version)
export MY_CONTAINER_REF=

# Kubernetes API version (format must be: GROUP_NAME/VERSION)
export MY_API_VERSION=my.api.version/v1alpha1

# Kubernetes respource Kind name for your operator
export MY_RESOURCE_KIND=MyOperator

# Name of the "route" for your HTTP/HTTPS service port
export MY_ROUTE_NAME=my-route

# Service "port" bound in your container, accessible from other cluster nodes
export MY_CONTAINER_PORT=80

# TargetPort for forwarding other pods of this same type
export MY_TARGET_PORT=8000

# NodePort, OCP static port (in 30000-32767) exposed on all cluster nodes. See:
# https://docs.openshift.com/container-platform/3.6/dev_guide/expose_service/expose_internal_ip_nodeport.html
export MY_NODE_PORT=30080

# Env var for container configuration, will be set in container environment
export MY_ENV_VAR_NAME=
export MY_ENV_VAR_VALUE=

